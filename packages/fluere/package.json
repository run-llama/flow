{
  "name": "fluere",
  "version": "0.1.2",
  "description": "workflow execution engine",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "workerd": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.serverless.js"
      },
      "edge-light": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.serverless.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./shared": {
      "workerd": {
        "types": "./shared/index.d.ts",
        "default": "./shared/index.serverless.js"
      },
      "edge-light": {
        "types": "./shared/index.d.ts",
        "default": "./shared/index.serverless.js"
      },
      "require": {
        "types": "./shared/index.d.cts",
        "default": "./shared/index.cjs"
      },
      "default": {
        "types": "./shared/index.d.ts",
        "default": "./shared/index.js"
      }
    },
    "./interrupter/*": {
      "types": "./interrupter/*.d.ts",
      "default": "./interrupter/*.js"
    }
  },
  "files": [
    "dist",
    "interrupter",
    "shared"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "ai": "^4.1.61",
    "hono": "^4.7.4",
    "next": "^15.2.2",
    "react": "^19.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "peerDependencies": {
    "ai": "^4.1.61",
    "hono": "^4.7.4",
    "next": "^15.2.2",
    "react": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "hono": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "ai": {
      "optional": true
    }
  }
}
