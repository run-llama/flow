{
  "name": "fluere",
  "version": "0.1.7",
  "description": "event-based workflow engine",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "workerd": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "edge-light": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.serverless.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./shared": {
      "workerd": {
        "types": "./shared/index.d.ts",
        "default": "./shared/index.js"
      },
      "edge-light": {
        "types": "./shared/index.d.ts",
        "default": "./shared/index.serverless.js"
      },
      "require": {
        "types": "./shared/index.d.cts",
        "default": "./shared/index.cjs"
      },
      "default": {
        "types": "./shared/index.d.ts",
        "default": "./shared/index.js"
      }
    },
    "./interrupter/*": {
      "types": "./interrupter/*.d.ts",
      "default": "./interrupter/*.js"
    },
    "./middleware/*": {
      "types": "./middleware/*.d.ts",
      "default": "./middleware/*.js"
    },
    "./util/*": {
      "types": "./util/*.d.ts",
      "default": "./util/*.js"
    }
  },
  "files": [
    "dist",
    "interrupter",
    "shared",
    "util",
    "middleware"
  ],
  "scripts": {
    "build": "rimraf dist interrupter middleware util && tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "prepublish": "cp ../../README.md ./README.md"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "hono": "^4.7.4",
    "next": "^15.2.2",
    "p-retry": "^6.2.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "hono": "^4.7.4",
    "next": "^15.2.2",
    "p-retry": "^6.2.1",
    "zod": "^3.24.2"
  },
  "license": "MIT",
  "peerDependenciesMeta": {
    "hono": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "p-retry": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  }
}
